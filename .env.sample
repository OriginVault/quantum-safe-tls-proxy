# Application Settings
APP_ENV=dev                      # Set to 'dev' or 'prod' based on the environment
APP_NAME=QuantumSafeTLSProxy     # Name of the application

# Proxy Settings
PROXY_HOST=0.0.0.0               # The host IP address for the proxy server
PROXY_PORT=443                   # The port for the proxy server

# TLS Configuration
TLS_CERT_FILE=./config/tls/cert.pem   # Path to the TLS certificate file
TLS_KEY_FILE=./config/tls/key.pem     # Path to the TLS private key file
TLS_CA_FILE=./config/tls/ca.pem       # Path to the TLS CA certificate file (if applicable)

# Monitoring Configuration
METRICS_PORT=9090                # Port for the Prometheus metrics server

# Renewal Settings
ENABLE_AUTO_RENEWAL=true         # Enable or disable automatic TLS certificate renewal
RENEWAL_CHECK_INTERVAL=7d        # Interval for checking certificate renewal

# Logging Settings
LOG_LEVEL=DEBUG                  # Logging level (DEBUG, INFO, WARNING, ERROR)

# Backend Service Settings
BACKEND_URL=http://localhost:8080 # URL of the backend service to proxy requests to

# Authentication Middleware Settings
AUTH_SECRET_KEY=my_secret_key    # Secret key for authentication (if applicable)

# Rate Limiter Settings
RATE_LIMIT=100                   # Max number of requests per time window
RATE_LIMIT_WINDOW=60             # Time window in seconds for rate limiting

# Key Management
KEY_MANAGER_SECRET=my_key_manager_secret # Secret used by the key management service

# Post-Quantum Algorithms Configuration
PQ_ALGORITHM=kyber               # Default post-quantum algorithm to use (e.g., kyber, dilithium)

# Health Check Settings
HEALTH_CHECK_INTERVAL=30         # Interval for health checks (in seconds)

# Database / External Services (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase # Example for database connection
EXTERNAL_API_KEY=your_api_key_here # Example for external service integration
